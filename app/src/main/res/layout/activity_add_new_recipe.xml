<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/add_recipe_layout"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/recipeTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name of Recipe"
        android:textColorHighlight="@color/colorPrimary"
        android:inputType="text"
        android:textColorLink="@color/colorPrimary" />

    <EditText
        android:id="@+id/ingredientsLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@null"
        android:clickable="false"
        android:ems="10"
        android:enabled="false"
        android:focusable="false"
        android:fontFamily="sans-serif"
        android:inputType="none"
        android:text="Ingredients:"
        android:textAlignment="textStart"
        android:textColor="#222"
        android:textSize="24sp"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/ingredientsEditTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:ems="10"
        android:hint="Enter recipe ingredients here..."
        android:inputType="textMultiLine"
        android:textColorLink="@color/colorPrimary" />

    <EditText
        android:id="@+id/procedureLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:clickable="false"
        android:ems="10"
        android:enabled="false"
        android:focusable="false"
        android:fontFamily="sans-serif"
        android:inputType="none"
        android:text="Procedure:"
        android:textAlignment="textStart"
        android:textColor="#222"
        android:textSize="24sp"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/procedureEditTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:ems="10"
        android:hint="Enter recipe procedure here..."
        android:inputType="textMultiLine"
        android:textColorLink="@color/colorPrimary" />

</LinearLayout>