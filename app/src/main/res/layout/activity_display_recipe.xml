<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textAlignment="center"
    tools:context="com.itsdamslife.myrecipes.DisplayRecipeActivity">

    <RelativeLayout
        android:id="@+id/relativeRecipeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="6dp"
        tools:layout_editor_absoluteY="6dp">

        <EditText
            android:id="@+id/recipeTitle"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:background="@null"
            android:clickable="false"
            android:ems="10"
            android:enabled="false"
            android:focusable="false"
            android:fontFamily="sans-serif"
            android:inputType="none"
            android:text="Title"
            android:textAlignment="textStart"
            android:textColor="#222"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintHorizontal_bias="0.09"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/timeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/timeInMins"
            android:layout_alignBottom="@+id/timeInMins"
            android:layout_alignStart="@+id/ingredientsTextView"
            android:layout_marginLeft="16dp"
            android:background="@null"
            android:clickable="false"
            android:ems="10"
            android:enabled="false"
            android:focusable="false"
            android:inputType="none"
            android:text="Time"
            android:textColor="#333"
            android:textSize="16sp"
            android:textStyle="italic"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recipeTitle" />

        <EditText
            android:id="@+id/timeInMins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/recipeTitle"
            android:layout_below="@+id/recipeTitle"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="17dp"
            android:background="@null"
            android:clickable="false"
            android:ems="10"
            android:enabled="false"
            android:focusable="false"
            android:inputType="none"
            android:text="0 minutes"
            android:textColor="#333"
            android:textSize="16sp"
            android:textStyle="italic"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toRightOf="@+id/timeTitle"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recipeTitle" />

        <TextView
            android:id="@+id/ingredientsTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:lineSpacingExtra="0sp"
            android:scrollbars="vertical"
            android:text="TextView is a multi line text view"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_default="wrap"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/timeTitle"
            android:layout_below="@+id/timeTitle"
            android:layout_alignEnd="@+id/recipeTitle"
            android:layout_marginTop="18dp" />
    </RelativeLayout>


</android.support.constraint.ConstraintLayout>
